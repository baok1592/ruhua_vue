.login {
  padding: 50px 30px;
}
.login .head {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
}
.login .head .head-img {
      padding: 2px 0;
      box-shadow: 0px 0px 5px #E1E1E1;
      width: 56px;
      height: 56px;
      border-radius: 50%;
      border: 1px solid #E2E2E2;
      box-sizing: border-box;
      text-align: center;
}
.login .head .head-img ._img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
}
.login .head-name {
    text-align: center;
    border-bottom: 2px solid #EFEFEF;
    padding: 15px 0 30px;
    font-size: 12px;
}
.login .shen {
    padding: 25px 0 20px;
    font-size: 14px;
}
.login .huo {
    font-size: 12px;
    color: #999999;
    padding-bottom: 30px;
}
.login .btn {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    font-size: 14px;
}
.login .btn .btn-l {
      background-color: #EFEFEF;
      border-radius: 3px;
      height: 40px;
      line-height: 40px;
      text-align: center;
      color: #9E9E9E;
      width: 45%;
}
.login .btn .btn-r {
      background-color: #ED3F14;
      border-radius: 3px;
      height: 40px;
      line-height: 40px;
      text-align: center;
      width: 45%;
      color: #fff;
}

